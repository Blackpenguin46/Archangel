{
  "dashboard": {
    "id": null,
    "title": "Security Monitoring & Threats",
    "tags": ["security", "honeypots", "threats", "alerts"],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Threat Overview",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Honeypot Interactions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(honeypot_interactions_total[5m])",
            "legendFormat": "{{honeypot_type}} - {{instance}}"
          }
        ],
        "yAxes": [
          {
            "label": "Interactions/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 1}
      },
      {
        "id": 3,
        "title": "Attack Sources (Top 10)",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (source_ip) (honeypot_interactions_total))",
            "legendFormat": "{{source_ip}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 1}
      },
      {
        "id": 4,
        "title": "Suricata IDS Alerts",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(suricata_alerts_total[5m])",
            "legendFormat": "{{severity}} - {{category}}"
          }
        ],
        "yAxes": [
          {
            "label": "Alerts/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 9}
      },
      {
        "id": 5,
        "title": "Red Team Activity",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 17}
      },
      {
        "id": 6,
        "title": "Red Team Actions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(archangel_red_team_actions_total[5m])",
            "legendFormat": "{{action_type}} - {{agent_id}}"
          }
        ],
        "yAxes": [
          {
            "label": "Actions/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 18}
      },
      {
        "id": 7,
        "title": "Attack Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "(sum(rate(archangel_red_team_actions_success_total[5m])) / sum(rate(archangel_red_team_actions_total[5m]))) * 100",
            "legendFormat": "Success Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 30},
                {"color": "red", "value": 70}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 18}
      },
      {
        "id": 8,
        "title": "Blue Team Response",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 26}
      },
      {
        "id": 9,
        "title": "Blue Team Detection Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(archangel_blue_team_detections_total[5m])",
            "legendFormat": "{{detection_type}} - {{agent_id}}"
          }
        ],
        "yAxes": [
          {
            "label": "Detections/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 27}
      },
      {
        "id": 10,
        "title": "Response Time to Threats",
        "type": "graph",
        "targets": [
          {
            "expr": "archangel_blue_team_response_time_seconds",
            "legendFormat": "{{agent_id}} Response Time"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (s)",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 27}
      },
      {
        "id": 11,
        "title": "Active Alerts",
        "type": "table",
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "legendFormat": "{{alertname}}"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 35}
      }
    ]
  }
}